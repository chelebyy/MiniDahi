<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AgeGroupCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">8dp</item>
        <item name="rippleColor">@color/ripple_light</item>
    </style>

    <style name="CardTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardSubtitle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:alpha">0.9</item>
    </style>

    <style name="ParentControlButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="strokeColor">@color/text_light</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/ripple_light</item>
    </style>
</resources>
